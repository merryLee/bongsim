<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true" android:state_pressed="true">
        <shape android:padding="10dp" android:shape="rectangle">
            <gradient android:angle="-45" android:centerColor="@color/sendMediumColor" android:endColor="@color/sendDarkColor" android:startColor="@color/sendLightColor"></gradient>
            <stroke android:width="2dp" android:color="#000000"></stroke>
            <corners android:bottomLeftRadius="15dp" android:bottomRightRadius="15dp" android:topLeftRadius="15dp" android:topRightRadius="15dp"></corners>
        </shape>
    </item>

    <item android:state_enabled="true" android:state_focused="true">
        <shape android:padding="10dp" android:shape="rectangle">
            <gradient android:angle="-45" android:centerColor="@color/sendMediumColor" android:endColor="@color/sendDarkColor" android:startColor="@color/sendLightColor"></gradient>
            <corners android:bottomLeftRadius="15dp" android:bottomRightRadius="15dp" android:topLeftRadius="15dp" android:topRightRadius="15dp"></corners>
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape android:padding="10dp" android:shape="rectangle">
            <gradient android:angle="-45" android:centerColor="@color/sendMediumColor" android:endColor="@color/sendDarkColor" android:startColor="@color/sendLightColor"></gradient>
            <corners android:bottomLeftRadius="15dp" android:bottomRightRadius="15dp" android:topLeftRadius="15dp" android:topRightRadius="15dp"></corners>
        </shape>
    </item>
</selector>